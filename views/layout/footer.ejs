<script>
  // Back to Top Functionality
  const backToTopBtn = document.getElementById('backToTop');
  
  function scrollToTop() {
    window.scrollTo({
      top: 0,
      behavior: 'smooth'
    });
  }
  
  window.addEventListener('scroll', function() {
    if (window.scrollY > 300) {
      backToTopBtn.style.opacity = '1';
      backToTopBtn.style.transform = 'translateY(0)';
    } else {
      backToTopBtn.style.opacity = '0';
      backToTopBtn.style.transform = 'translateY(10px)';
    }
  });
  
  // Newsletter Form Submission
  const newsletterForm = document.querySelector('input[type="email"]');
  const newsletterBtn = newsletterForm?.nextElementSibling;
  
  if (newsletterBtn) {
    newsletterBtn.addEventListener('click', function(e) {
      e.preventDefault();
      const email = newsletterForm.value;
      
      if (email && validateEmail(email)) {
        // Show success toast
        showToast('Thank you for subscribing!', 'success');
        newsletterForm.value = '';
      } else {
        showToast('Please enter a valid email address.', 'error');
      }
    });
  }
  
  function validateEmail(email) {
    const re = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    return re.test(email);
  }
  
  // Toast Notification Function
  function showToast(message, type = 'info') {
    // Remove existing toast
    const existingToast = document.getElementById('footer-toast');
    if (existingToast) existingToast.remove();
    
    // Create toast element
    const toast = document.createElement('div');
    toast.id = 'footer-toast';
    toast.className = 'fixed bottom-24 right-8 z-50 animate-slide-up';
    
    const bgColor = type === 'success' 
      ? 'bg-gradient-to-r from-green-600 to-emerald-600' 
      : 'bg-gradient-to-r from-red-600 to-rose-600';
    
    toast.innerHTML = `
      <div class="${bgColor} text-white px-6 py-4 rounded-xl shadow-2xl flex items-center space-x-3 min-w-64">
        <i class="fa-solid ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'} text-xl"></i>
        <span>${message}</span>
      </div>
    `;
    
    document.body.appendChild(toast);
    
    // Auto remove after 4 seconds
    setTimeout(() => {
      toast.classList.add('animate-slide-down');
      setTimeout(() => toast.remove(), 300);
    }, 4000);
  }
  
  // Add CSS animations
  const style = document.createElement('style');
  style.textContent = `
    @keyframes slide-up {
      from { transform: translateY(100%); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }
    
    @keyframes slide-down {
      from { transform: translateY(0); opacity: 1; }
      to { transform: translateY(100%); opacity: 0; }
    }
    
    .animate-slide-up {
      animation: slide-up 0.3s ease-out;
    }
    
    .animate-slide-down {
      animation: slide-down 0.3s ease-in forwards;
    }
    
    .social-icon {
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }
    
    .social-icon:hover {
      transform: translateY(-5px) rotate(5deg);
    }
  `;
  document.head.appendChild(style);
  
  // Add hover effects to social icons
  document.querySelectorAll('footer a[target="_blank"]').forEach(icon => {
    icon.addEventListener('mouseenter', function() {
      const innerDiv = this.querySelector('div:last-child');
      if (innerDiv) {
        innerDiv.style.transform = 'scale(1.15) rotate(5deg)';
      }
    });
    
    icon.addEventListener('mouseleave', function() {
      const innerDiv = this.querySelector('div:last-child');
      if (innerDiv) {
        innerDiv.style.transform = 'scale(1) rotate(0deg)';
      }
    });
  });
  
  // Smooth scroll for anchor links in footer
  document.querySelectorAll('footer a[href^="/"]').forEach(link => {
    link.addEventListener('click', function(e) {
      const href = this.getAttribute('href');
      
      // Check if it's a same-page anchor
      if (href.startsWith('/') && !href.includes('#')) {
        return; // Let the link work normally
      }
      
      e.preventDefault();
      
      // Smooth scroll to target
      const targetId = href.split('#')[1];
      const targetElement = document.getElementById(targetId);
      
      if (targetElement) {
        window.scrollTo({
          top: targetElement.offsetTop - 80,
          behavior: 'smooth'
        });
      }
    });
  });
</script>
