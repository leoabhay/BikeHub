<%- include('layout/header') %>

<div class="min-h-screen bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 p-4 md:p-8">
  <!-- Main Content Container -->
  <div class="max-w-7xl mx-auto">
    
    <!-- Header Section -->
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-white mb-2">Brand Management</h1>
      <p class="text-gray-300">Add, edit, and manage your vehicle brands</p>
    </div>

    <!-- Form and Table Container -->
    <div class="grid lg:grid-cols-3 gap-8">
      
      <!-- Form Section -->
      <div class="lg:col-span-1">
        <div class="glass-effect rounded-2xl p-6 border border-gray-700 shadow-2xl">
          <!-- Form Header -->
          <div class="mb-6">
            <div class="flex items-center space-x-3">
              <div class="p-2 bg-gradient-to-r from-blue-500 to-purple-600 rounded-lg">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                </svg>
              </div>
              <h2 class="text-2xl font-semibold text-white">
                <%= brand ? 'Edit Brand' : 'Add New Brand' %>
              </h2>
            </div>
          </div>

          <!-- Brand Form -->
          <form
            action="<%= brand ? `/api/brand/update/${brand.id}` : '/api/brand/add' %>"
            method="post"
            id="brand-form"
            enctype="multipart/form-data"
            class="space-y-6"
          >
            <% if (brand) { %>
            <input type="hidden" name="_method" value="PUT" />
            <input type="hidden" name="id" value="<%= brand.id %>" />
            <% } %>

            <!-- Brand Name Input -->
            <div class="space-y-3">
              <label for="modelName" class="block text-sm font-medium text-gray-200">
                Brand Name
                <span class="text-red-400">*</span>
              </label>
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <input
                  type="text"
                  id="modelName"
                  name="name"
                  value="<%= brand ? brand.name : '' %>"
                  class="w-full pl-10 pr-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none text-white placeholder-gray-400 transition duration-200"
                  placeholder="Enter brand name"
                  required
                />
              </div>
            </div>

            <!-- Logo Upload -->
            <div class="space-y-3">
              <label for="logoUpload" class="block text-sm font-medium text-gray-200">
                Brand Logo
                <span class="text-red-400">*</span>
              </label>
              <div class="relative group">
                <input
                  type="file"
                  id="logoUpload"
                  name="logo"
                  accept="image/*"
                  class="hidden"
                  onchange="previewLogo(event)"
                />
                <label for="logoUpload" class="cursor-pointer">
                  <div class="border-2 border-dashed border-gray-600 rounded-2xl p-6 text-center hover:border-blue-500 hover:bg-blue-500/10 transition-all duration-300 group-hover:scale-[1.02]">
                    <div class="space-y-3">
                      <div class="mx-auto w-12 h-12 bg-gradient-to-r from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                      </div>
                      <div>
                        <p class="text-gray-300 font-medium">Click to upload logo</p>
                        <p class="text-sm text-gray-400">PNG, JPG, WEBP up to 5MB</p>
                      </div>
                    </div>
                  </div>
                </label>
                <!-- Logo Preview -->
                <div id="logoPreview" class="mt-4 hidden">
                  <p class="text-sm text-gray-300 mb-2">Preview:</p>
                  <div class="relative w-24 h-24 rounded-lg overflow-hidden border-2 border-gray-700">
                    <img id="previewImage" class="w-full h-full object-cover" />
                    <button type="button" onclick="removePreview()" class="absolute top-1 right-1 w-6 h-6 bg-red-500 rounded-full flex items-center justify-center text-white hover:bg-red-600">
                      Ã—
                    </button>
                  </div>
                </div>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="pt-4">
              <button
                type="submit"
                class="w-full bg-gradient-to-r from-blue-600 to-purple-600 text-white font-semibold py-3.5 px-6 rounded-xl hover:from-blue-700 hover:to-purple-700 transform hover:scale-[1.02] transition-all duration-300 shadow-lg hover:shadow-xl flex items-center justify-center space-x-2"
              >
                <span><%= brand ? 'Update Brand' : 'Add Brand' %></span>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
              </button>
            </div>
          </form>
        </div>
      </div>

      <!-- Table Section -->
      <div class="lg:col-span-2">
        <!-- Table Header -->
        <div class="glass-effect rounded-2xl p-6 mb-6 border border-gray-700">
          <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
            <!-- Search Box -->
            <div class="flex-1 max-w-md">
              <div class="relative">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                  </svg>
                </div>
                <input 
                  type="text" 
                  id="searchBrand" 
                  placeholder="Search brands..." 
                  class="w-full pl-10 pr-4 py-3 bg-gray-800/50 border border-gray-700 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none text-white placeholder-gray-400 transition duration-200"
                >
              </div>
            </div>

            <!-- Items per page -->
            <div class="flex items-center space-x-3">
              <span class="text-gray-300 font-medium">Show:</span>
              <div class="relative">
                <select 
                  id="limitSelect" 
                  class="appearance-none bg-gray-800 border border-gray-700 text-white rounded-xl px-4 py-2.5 pr-8 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition duration-200"
                >
                  <option value="5" <%= pagination.limit == 5 ? 'selected' : '' %>>5</option>
                  <option value="10" <%= pagination.limit == 10 ? 'selected' : '' %>>10</option>
                  <option value="20" <%= pagination.limit == 20 ? 'selected' : '' %>>20</option>
                  <option value="50" <%= pagination.limit == 50 ? 'selected' : '' %>>50</option>
                </select>
                <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-400">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                  </svg>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Brands Table -->
        <div class="glass-effect rounded-2xl overflow-hidden border border-gray-700 shadow-2xl">
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="bg-gradient-to-r from-gray-800 to-gray-900">
                  <th class="py-5 px-6 text-left text-sm font-semibold text-gray-200 uppercase tracking-wider">
                    <div class="flex items-center space-x-2">
                      <span>#</span>
                    </div>
                  </th>
                  <th class="py-5 px-6 text-left text-sm font-semibold text-gray-200 uppercase tracking-wider">
                    Brand Name
                  </th>
                  <th class="py-5 px-6 text-left text-sm font-semibold text-gray-200 uppercase tracking-wider">
                    Logo
                  </th>
                  <th class="py-5 px-6 text-left text-sm font-semibold text-gray-200 uppercase tracking-wider">
                    Actions
                  </th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-700/50">
                <% if (brands && brands.length > 0) { %> 
                  <% brands.forEach((brand, index) => { %>
                  <tr class="hover:bg-gray-800/30 transition-all duration-300 group">
                    <td class="py-5 px-6">
                      <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-gradient-to-r from-blue-500/20 to-purple-600/20 text-blue-300 font-medium">
                        <%= (pagination.currentPage - 1) * pagination.limit + index + 1 %>
                      </span>
                    </td>
                    <td class="py-5 px-6">
                      <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 rounded-lg bg-gradient-to-r from-blue-500/10 to-purple-600/10 flex items-center justify-center">
                          <svg class="w-5 h-5 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                          </svg>
                        </div>
                        <span class="font-medium text-white"><%= brand.name %></span>
                      </div>
                    </td>
                    <td class="py-5 px-6">
                      <% if (brand.logo) { %>
                      <div class="relative group/logo">
                        <img
                          src="<%= brand.logo %>"
                          alt="<%= brand.name %> Logo"
                          class="h-14 w-14 object-cover rounded-xl border-2 border-gray-600 group-hover/logo:border-blue-500 transition-all duration-300"
                        />
                        <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover/logo:opacity-100 rounded-xl transition-all duration-300 flex items-center justify-center">
                          <span class="text-white text-xs font-medium">Preview</span>
                        </div>
                      </div>
                      <% } else { %>
                      <div class="h-14 w-14 rounded-xl bg-gradient-to-r from-gray-700 to-gray-800 border-2 border-dashed border-gray-600 flex items-center justify-center">
                        <span class="text-gray-400 text-sm">No Logo</span>
                      </div>
                      <% } %>
                    </td>
                    <td class="py-5 px-6">
                      <div class="flex items-center space-x-3">
                        <a
                          href="/add-model/<%= brand.id %>"
                          class="inline-flex items-center space-x-2 px-4 py-2 bg-gradient-to-r from-blue-500/10 to-blue-600/10 text-blue-400 rounded-lg hover:from-blue-500/20 hover:to-blue-600/20 hover:text-blue-300 transition-all duration-300 group/edit"
                        >
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                          </svg>
                          <span class="font-medium">Edit</span>
                        </a>
                        <button
                          onclick="deleteBrand('<%= brand.id %>')"
                          class="inline-flex items-center space-x-2 px-4 py-2 bg-gradient-to-r from-red-500/10 to-red-600/10 text-red-400 rounded-lg hover:from-red-500/20 hover:to-red-600/20 hover:text-red-300 transition-all duration-300 group/delete"
                        >
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                          </svg>
                          <span class="font-medium">Delete</span>
                        </button>
                      </div>
                    </td>
                  </tr>
                  <% }); %>
                <% } else { %>
                  <tr>
                    <td colspan="4" class="py-12 text-center">
                      <div class="space-y-4">
                        <div class="mx-auto w-20 h-20 rounded-full bg-gradient-to-r from-gray-700 to-gray-800 flex items-center justify-center">
                          <svg class="w-10 h-10 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                          </svg>
                        </div>
                        <div>
                          <h3 class="text-xl font-medium text-gray-300 mb-2">No brands found</h3>
                          <p class="text-gray-400">Start by adding your first brand using the form on the left</p>
                        </div>
                      </div>
                    </td>
                  </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Pagination -->
        <% if (pagination && pagination.totalPages > 1) { %>
        <div class="glass-effect rounded-2xl p-6 mt-6 border border-gray-700">
          <div class="flex flex-col md:flex-row items-center justify-between gap-4">
            <div class="text-gray-400">
              Showing <%= (pagination.currentPage - 1) * pagination.limit + 1 %> to 
              <%= Math.min(pagination.currentPage * pagination.limit, pagination.totalItems) %> of 
              <%= pagination.totalItems %> brands
            </div>
            <div class="flex items-center space-x-2">
              <% if (pagination.currentPage > 1) { %>
              <a
                href="/add-model?page=<%= pagination.currentPage - 1 %>&limit=<%= pagination.limit %>"
                class="inline-flex items-center space-x-2 px-4 py-2.5 bg-gray-800 text-gray-300 rounded-xl hover:bg-gray-700 hover:text-white transition-all duration-300"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
                <span>Previous</span>
              </a>
              <% } %>
              
              <div class="flex items-center space-x-2">
                <% for (let i = Math.max(1, pagination.currentPage - 2); i <= Math.min(pagination.totalPages, pagination.currentPage + 2); i++) { %>
                <a
                  href="/add-model?page=<%= i %>&limit=<%= pagination.limit %>"
                  class="inline-flex items-center justify-center w-10 h-10 <%= i === pagination.currentPage ? 'bg-gradient-to-r from-blue-600 to-purple-600 text-white' : 'bg-gray-800 text-gray-300 hover:bg-gray-700' %> rounded-xl transition-all duration-300"
                >
                  <%= i %>
                </a>
                <% } %>
              </div>
              
              <% if (pagination.currentPage < pagination.totalPages) { %>
              <a
                href="/add-model?page=<%= pagination.currentPage + 1 %>&limit=<%= pagination.limit %>"
                class="inline-flex items-center space-x-2 px-4 py-2.5 bg-gray-800 text-gray-300 rounded-xl hover:bg-gray-700 hover:text-white transition-all duration-300"
              >
                <span>Next</span>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
              <% } %>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<script>
  // Logo preview functionality
  function previewLogo(event) {
    const file = event.target.files[0];
    const preview = document.getElementById('logoPreview');
    const previewImage = document.getElementById('previewImage');
    
    if (file) {
      const reader = new FileReader();
      reader.onload = function(e) {
        previewImage.src = e.target.result;
        preview.classList.remove('hidden');
      }
      reader.readAsDataURL(file);
    }
  }

  function removePreview() {
    document.getElementById('logoUpload').value = '';
    document.getElementById('logoPreview').classList.add('hidden');
    document.getElementById('previewImage').src = '';
  }

  // Form submission
  document.getElementById("brand-form").addEventListener("submit", async (e) => {
    e.preventDefault();

    const submitBtn = e.target.querySelector('button[type="submit"]');
    const originalText = submitBtn.innerHTML;
    
    // Show loading state
    submitBtn.innerHTML = `
      <svg class="animate-spin w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
      </svg>
      Processing...
    `;
    submitBtn.disabled = true;

    const formData = new FormData(e.target);
    const action = e.target.action;
    const formMethod = e.target.querySelector('input[name="_method"]') ? "PUT" : "POST";

    try {
      const response = await fetch(action, {
        method: formMethod,
        body: formData,
      });

      const result = await response.json();

      if (response.ok) {
        // Success notification
        showNotification(result.msg, 'success');
        setTimeout(() => {
          window.location.href = result.redirectTo || window.location.href;
        }, 1500);
      } else {
        showNotification(result.error || 'Error processing request', 'error');
        submitBtn.innerHTML = originalText;
        submitBtn.disabled = false;
      }
    } catch (error) {
      showNotification('Network error occurred', 'error');
      submitBtn.innerHTML = originalText;
      submitBtn.disabled = false;
    }
  });

  // Delete brand with confirmation
  async function deleteBrand(brandId) {
    const modal = document.createElement('div');
    modal.className = 'fixed inset-0 bg-black/70 flex items-center justify-center z-50 p-4';
    modal.innerHTML = `
      <div class="bg-gray-800 rounded-2xl p-6 max-w-md w-full border border-gray-700 animate-scale-in">
        <div class="flex items-center space-x-3 mb-4">
          <div class="w-12 h-12 rounded-full bg-red-500/20 flex items-center justify-center">
            <svg class="w-6 h-6 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.342 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
            </svg>
          </div>
          <div>
            <h3 class="text-xl font-semibold text-white">Confirm Deletion</h3>
            <p class="text-gray-300">This action cannot be undone</p>
          </div>
        </div>
        <p class="text-gray-400 mb-6">Are you sure you want to delete this brand? All associated data will be permanently removed.</p>
        <div class="flex space-x-3">
          <button onclick="this.closest('div').remove()" class="flex-1 px-4 py-3 bg-gray-700 text-white rounded-xl hover:bg-gray-600 transition-all duration-300">
            Cancel
          </button>
          <button id="confirmDelete" class="flex-1 px-4 py-3 bg-gradient-to-r from-red-600 to-red-700 text-white rounded-xl hover:from-red-700 hover:to-red-800 transition-all duration-300 font-medium">
            Delete
          </button>
        </div>
      </div>
    `;
    
    document.body.appendChild(modal);
    
    modal.querySelector('#confirmDelete').addEventListener('click', async () => {
      try {
        const response = await fetch(`/api/brand/delete/${brandId}`, {
          method: "DELETE",
        });

        const result = await response.json();

        if (response.ok) {
          showNotification(result.msg, 'success');
          setTimeout(() => window.location.reload(), 1500);
        } else {
          showNotification(result.error || "Error deleting brand", 'error');
        }
      } catch (error) {
        showNotification("Network error occurred", 'error');
      } finally {
        modal.remove();
      }
    });
  }

  // Search functionality with debounce
  let searchTimeout;
  document.getElementById('searchBrand').addEventListener('input', function(e) {
    clearTimeout(searchTimeout);
    const searchTerm = e.target.value.toLowerCase().trim();
    
    searchTimeout = setTimeout(() => {
      document.querySelectorAll('tbody tr').forEach(row => {
        const brandName = row.querySelector('td:nth-child(2) .font-medium')?.textContent.toLowerCase() || '';
        row.style.display = brandName.includes(searchTerm) ? '' : 'none';
      });
    }, 300);
  });

  // Limit change handler
  document.getElementById('limitSelect').addEventListener('change', function() {
    const limit = this.value;
    window.location.href = `/add-model?page=1&limit=${limit}`;
  });

  // Notification function
  function showNotification(message, type = 'info') {
    const notification = document.createElement('div');
    notification.className = `fixed top-6 right-6 px-6 py-4 rounded-xl shadow-2xl z-50 animate-slide-in-right ${
      type === 'success' ? 'bg-gradient-to-r from-green-600 to-emerald-600' :
      type === 'error' ? 'bg-gradient-to-r from-red-600 to-rose-600' :
      'bg-gradient-to-r from-blue-600 to-cyan-600'
    }`;
    notification.innerHTML = `
      <div class="flex items-center space-x-3">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          ${type === 'success' ? 
            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>' :
            '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L4.342 16.5c-.77.833.192 2.5 1.732 2.5z"></path>'
          }
        </svg>
        <span class="text-white font-medium">${message}</span>
      </div>
    `;
    
    document.body.appendChild(notification);
    
    setTimeout(() => {
      notification.classList.add('animate-slide-out-right');
      setTimeout(() => notification.remove(), 300);
    }, 3000);
  }

  // Add CSS animations
  const style = document.createElement('style');
  style.textContent = `
    @keyframes slide-in-right {
      from { transform: translateX(100%); opacity: 0; }
      to { transform: translateX(0); opacity: 1; }
    }
    
    @keyframes slide-out-right {
